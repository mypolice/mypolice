<%= form_for([:police,@police]) do |f| %>
  <%= render "shared/error_message", :target => [@police] %>
  <div class="field">
    <p><%= f.label :email %></p>
    <p><%= f.text_field :email %></p>
  </div>

  <div class="field">
    <p><%= f.label :name %></p>
    <p><%= f.text_field :name %></p>
  </div>
  
  <div class="field">
  <p><%= f.label :password %></p>
  <p><%= f.password_field :password %></p>
  </div>

  <div class="actions">
    <%= f.submit %>
</div>
<% end %>
