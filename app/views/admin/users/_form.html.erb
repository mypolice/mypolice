<%= form_for([:admin,@user]) do |f| %>
  <%= render "shared/error_message", :target =>  @user] %>
  <div class="field">
    <p><%= f.label :email %></p>
  <p><%= f.text_field :email %></p>
  </div>
  
  <div class="field">
  <p><%= f.label :password %></p>
  <p><%= f.password_field :password %></p>
  </div>

  <div class="field">
    <%= f.label :sign_in_count %><br />
    <%= f.text_area :sign_in_count %>
  </div>

  <div class="field">
    <%= f.label :last_sign_in_ip %><br />
    <%= f.text_area :last_sign_in_ip %>
  </div>

  <div class="actions">
    <%= f.submit %>
</div>
<% end %>
