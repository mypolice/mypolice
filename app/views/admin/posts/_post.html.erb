<% div_for post do %>
  <h2><%= link_to_unless_current post.title, [:admin, post]%></h2>
  <p>posted by <%= post.user.email %></p>
  <p>Category:<%= post.category.name%></p>
  <p>Stroy:</p>
  <%= simple_format post.body %>
  <p>Suggestion:</p>
  <%= simple_format post.suggestion %>
  <p>
  <% if post.approved %>
    <%= link_to 'unapproved', unapprove_admin_post_path(post), :method => :put %>|
  <% else %>
    <%= link_to 'approved', approve_admin_post_path(post), :method => :put %>|
  <% end %>
  <%= link_to 'Edit', edit_admin_post_path(post) %> |
  <%= link_to 'Destroy', [:admin, post], :method => :delete, :confirm => "Are you sure?" %>|
  </p>
<%end%>

