<h1>Listing comments</h1>

<table>
  <tr>
    <th>Post</th>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 
<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.post_id %></td>
    <td><%= comment.body %></td>
    <td><%= link_to 'Show', [:admin, comment] %></td>
    <td><%= link_to 'Edit', edit_admin_comment_path(comment) %></td>
    <td><%= link_to 'Destroy', [:admin, comment], :confirm => 'Are you sure?', :method => :delete %></td>
   <% if comment.approved %>
     <td> <%= link_to 'Unapproved', unapprove_admin_comment_path(comment), :method =>:post %> </td>
   <% else %>
     <td> <%= link_to 'Approved', approve_admin_comment_path(comment), :method =>:postt%> </td>
  <% end %>
  </tr>
<% end %>
</table>
<%= will_paginate @comments %>
