<h1>Listing responses</h1>

<table>
  <tr>
    <th>Post</th>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @responses.each do |response| %>
  <tr>
    <td><%= response.post_id %></td>
    <td><%= response.body %></td>
    <td><%= link_to 'Show', [:admin, response] %></td>
    <td><%= link_to 'Edit', edit_admin_response_path(response) %></td>
    <td><%= link_to 'Destroy', [:admin, response], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<%= will_paginate @responses %>
