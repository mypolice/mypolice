-title  "Stories"

=content_for :sortby do
  -if params[:controller] == "posts"
    .sortby
      %ul
        %li
          Sort by:
        %li
          Most Recent /
        %li
          Oldest     
      %h1 Stories: Most Recent
  -if params[:controller] == "tags"
    .sortby
      %h1
        Tag:
        =@tag

//yield
#content
  
  #posts
    =render :partial => @posts
    =will_paginate @posts

=content_for :sidebar do
  %a{:title=>"Tell us your story",:href=>tellusyourstory_path}
    %img{:title=>"Tell us your story", :alt=>"Tell us your story", :src=>"/images/tellusstorybuton.png"}
  #latestresponses.sideblock
    %h3.sidebar
      Latest Responses:
    =render :partial=>"home/response",:collection=>@responses
  #tags.sideblock
    %h3.sidebar
      Tags
    -tag_cloud(@tags, %w(css1 css2 css3 css4)) do |tag,css_class|
      =link_to tag.name, tag_path(tag),:class=>css_class
  #map.sideblock
    %h3.sidebar
      Map
    .sidecontent 
      %img{:src=>"/images/map.png"}
