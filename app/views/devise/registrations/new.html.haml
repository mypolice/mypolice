-title "Signup as "<< resource_name 
#blankbox
  .centerbox
    %h2
      = "Sign up as " << resource_name

    =form_for(resource,:name=>resource_name,:url => registration_path(resource_name)) do |f|
      = render "shared/error_message", :target => [resource]
      %p
        = f.label :email 
        = mark_required(resource, :email)
      %p
        = f.text_field :email
      %p
        = f.label :password
      %p
        = f.password_field :password
      %p
        = f.label :password_confirmation
      %p
        = f.password_field :password_confirmation
      %p
        = f.submit "Sign up"

    = render :partial => "devise/shared/links"
